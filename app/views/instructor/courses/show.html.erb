
<h1>Here is the course (instructor view)</h1>
<p> instructor/courses # show</p>
<p> instructor/courses/:id </p>

<script>
  $(function() { 
    $('.lessons').sortable({
      update: function( event, ui ) {
        // alert("Lesson Id " + ui.item.data("item-id") + " Index: " + ui.item.index());
        // alert("UpdateUrl: " + ui.item.data('update-url') + " Index: " + ui.item.index());
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { lesson: { row_order_position: ui.item.index() } }
        });
      }
    });
  });

  $(function () {
    $('.sections').sortable({
      update: function( event, ui ) {
        // alert("Section Id " + ui.item.data("item-id") + " Index: " + ui.item.index());
        alert("UpdateUrl: " + ui.item.data('update-url') + " Index: " + ui.item.index());
        $.ajax({
          type: 'PUT',
          url: ui.item.data('update-url'),
          dataType: 'json',
          data: { section: { row_order_position: ui.item.index() } }
        });
      }
    });
  });

</script>

<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"> <%= current_course.title %> </h1>

  <%= image_tag current_course.image, class: "img-fluid"%>

 <!--  <br /> -->
  <%= link_to("Add a new section...", new_instructor_course_section_path(current_course), {class: "btn btn-primary"}) %>
  <%= link_to("Preview As Student", course_path(current_course), {class: "btn btn-warning float-right"}) %>
  <!-- <br class="clr"> -->

  <br />
  <br />
</div>

<div class="booyah-box col-10 offset-1">
  <ul class="sections">
    <% current_course.sections.rank(:row_order).each do |section| %>
      <li data-update-url= "<%= instructor_section_path section %>" >
        <%= section.title %>
        <%= link_to("New Lesson", new_instructor_section_lesson_path(section), {class: "float-right btn btn-primary btn-sm"}) %>
        <hr>
      </li>

      <ul class="lessons">
        <% section.lessons.rank(:row_order).each do |lesson| %>
          <li data-update-url = "<%= instructor_lesson_path lesson %>">
            <b><%= lesson.title %></b>
            -
            <%= lesson.subtitle %>
          </li>
        <% end %>
      </ul>

    <% end %>
  </ul>
</div>
