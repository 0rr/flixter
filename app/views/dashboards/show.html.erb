<br />
<h1>My Dashboard</h1>


<div class="booyah-box col-10 offset-1">

  <h1>What I'm Learning</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center"> <%= link_to course.title, course_path(course), class: 'nav-link' %> </h3>
    <br />

    <%= image_tag course.image, class: 'img-fluid' %>
    <br />

    <div class="row">
      <div class="col-12 col-8-sm">
        <%= course.description %>
      </div>
      <div class="col-12 col-4-sm text-center">
        <%= link_to 'More Info...', course_path(course), class:'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr />
  <% end %>

  <h1>What I'm Teaching</h1>
  <% current_user.courses.each do |course| %>
    <h3 class="text-center"> <%= link_to course.title, course_path(course), class: 'nav-link' %> </h3>
    <br />

    <%= image_tag course.image, class: 'img-fluid' %>
    <br />

    <div class="row">
      <div class="col-12 col-8-sm">
        <%= course.description %>
      </div>
      <div class="col-12 col-4-sm text-center">
        <%= link_to 'More Info...', course_path(course), class:'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr />
  <% end %>

</div>


