<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/7.0.5/video-js.css" rel="stylesheet">
  </head>

  <nav class="navbar navbar-toggleable-md navbar-inverse bg-primary">
  <a class="navbar-brand" href="<%= root_path %>"> Flixter </a>

  <div class="collapse navbar-collapse" id="navbarNav">
    <div class="navbar-nav">
      <%= link_to("See All Courses",courses_path,{class: "nav-item nav-link"}) %>
<!--       <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Dropdown Nav
          </a>

          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item" href="<%= courses_path %>">See All Courses</a>
            <a class="dropdown-item" href="">Action 2</a>
            <a class="dropdown-item" href="#">Action 3</a>
          </div>
        </li>
      </ul> -->
    </div>

    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <li class="nav-item align-self-end">
          <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
        </li>      
        <li class="nav-item align-self-end">
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </div>


</nav>

  <body>
    <div id="flex-content-container">
      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      
      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">

          <div class="col-12 col-sm-3">
            <b>Teachers</b>
            <br />
            <%= link_to 'Teach a Course', new_instructor_course_path %>
            <br />
            <%= link_to 'Dashboard', dashboard_path %>
          </div>

          <div class="col-12 col-sm-3">
            <b>About</b>
            <br />
            <%= link_to 'Team', '#' %>
            <br />
            <%= link_to 'Careers', '#' %>
            <br />
            <%= link_to 'Privacy Policy', privacy_path %>
          </div>

          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br />
            emailaddress@domainname.com
            <br />
            1234 Fake Street, N.W.
            <br />
            Washington D.C., 22201
          </div>

          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br />
            <br />
            <%= link_to 'https://github.com/0rr' do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>
            <span class="fa fa-facebook-square fa-2x social-button"></span>
            <span class="fa fa-twitter-square fa-2x social-button"></span>
          </div>

        </div>
      </div>
    </div>

    <script src="https://vjs.zencdn.net/7.0.5/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/ie8-version/videojs-ie8.min.js"></script>
  </body>
</html>
