<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/7.0.5/video-js.css" rel="stylesheet">




  </head>

  <body>
    <div id="flex-content-container">
      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      
      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">

          <div class="col-12 col-sm-3">
            <b>Teachers</b>
            <br />
            <%= link_to 'Teach a Course', new_instructor_course_path %>
            <br />
            <%= link_to 'Dashboard', dashboard_path %>
          </div>

          <div class="col-12 col-sm-3">
            <b>About</b>
            <br />
            <%= link_to 'Team', '#' %>
            <br />
            <%= link_to 'Careers', '#' %>
            <br />
            <%= link_to 'Privacy Policy', privacy_path %>
          </div>

          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br />
            emailaddress@domainname.com
            <br />
            1234 Fake Street, N.W.
            <br />
            Washington D.C., 22201
          </div>

          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br />
            <br />
            <%= link_to 'https://github.com/0rr' do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>
            <span class="fa fa-facebook-square fa-2x social-button"></span>
            <span class="fa fa-twitter-square fa-2x social-button"></span>
          </div>

        </div>
      </div>
    </div>

    <script src="https://vjs.zencdn.net/7.0.5/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/ie8-version/videojs-ie8.min.js"></script>
  </body>
</html>
